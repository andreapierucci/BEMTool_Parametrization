data<-list()

for (i in 1:12){
  data[[i]]<-OLD_DATA_4
DUP_OLD_DATA_4 = do.call(rbind, data)
}

DUP_OLD_DATA_4<-DUP_OLD_DATA_4%>%arrange(year,FS)
